{
  "name": "frontend-components-library",
  "version": "1.0.0",
  "private": false,
  "description": "A production-ready React component library built with TypeScript and Tailwind CSS. Features DataTable, InputField, Loading, and ErrorBoundary components with 100% test coverage.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "typescript",
    "component-library",
    "tailwindcss",
    "ui-components"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/frontend-components-library.git"
  },
  "homepage": "https://yourusername.github.io/frontend-components-library",
  "bugs": {
    "url": "https://github.com/yourusername/frontend-components-library/issues"
  },
  "scripts": {
    "start": "node dev-server.js",
    "dev": "node dev-server.js",
    "storybook": "storybook dev -p 6006",
    "build": "npm run build:ts && npm run build:lib",
    "build:ts": "tsc --noEmit",
    "build:lib": "rollup -c",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "bundle-size": "npm run build:lib && npx webpack-bundle-analyzer dist",
    "prepublishOnly": "npm run build:lib && npm run test",
    "storybook:build": "storybook build -o storybook-static",
    "build:storybook": "storybook build -o storybook-static",
    "build:prod": "npm run lint && npm run type-check && npm run test && npm run build",
    "deploy:prepare": "npm run build:prod && npm run storybook:build",
    "serve:prod": "npm run build:prod && npm start",
    "clean": "rimraf dist storybook-static coverage",
    "prepack": "npm run clean && npm run build:prod",
    "deploy": "node scripts/deploy.js",
    "deploy:storybook": "npm run storybook:build && gh-pages -d storybook-static"
  },
  "dependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/cli": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^5.1.0",
    "gh-pages": "^6.0.0",
    "jsdom": "^23.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^4.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "webpack-bundle-analyzer": "^4.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
